<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{raml.title}}</title>

<style>
    {{> bootstrap.css}}
 </style>
 <script type="text/javascript">
   {{> jquery.hbs}}
 </script>
 <script type="text/javascript">
     {{> bootstrap.js}}
  </script>

 <style>
     {{> main.css}}
  </style>


<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');


  ga('create', 'UA-76789851-1', 'auto', {
        'allowLinker': true,
        'storage': 'none','clientId':localStorage.getItem('gaClientId')
    });

  ga('set', 'checkProtocolTask', null);
  ga('set','page','/{{pascalCase solution.title}}');
  ga('send', 'pageview');

</script>

</head>
<body>
  <div class="container">

  <h1>Infrastructure View of solution</h1>


  <table>
    <tr>
      <th>Component</th>
        <th>Test</th>
      {{#environments as | env |}}
        <th>{{env.name}}</th>
      {{/environments}}
    </tr>

  {{#each this.components as | comp |}}
    {{#each comp.implementationTests as | test |}}
    <tr>
      <td>{{comp.name}}</td>
      <td>{{test.name}}</td>
      {{#each ../../environments as | env |}}
        <td>
          {{comp.name}}
        </td>
      {{/each}}

    </tr>
    {{/each}}
  {{/each}}

</table>

</div>

</body>

</html>
