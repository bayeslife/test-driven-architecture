<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{raml.title}}</title>

<style>
    {{> bootstrap.css}}
 </style>
 <script type="text/javascript">
   {{> jquery.hbs}}
 </script>
 <script type="text/javascript">
     {{> bootstrap.js}}
  </script>

 <style>
     {{> main.css}}
  </style>


<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');


  ga('create', 'UA-76789851-1', 'auto', {
        'allowLinker': true,
        'storage': 'none','clientId':localStorage.getItem('gaClientId')
    });

  ga('set', 'checkProtocolTask', null);
  ga('set','page','/{{pascalCase solution.title}}');
  ga('send', 'pageview');

</script>

</head>
<body>
  <div class="container">

  <h1>Infrastructure View of solution</h1>

  <h2>Implementation Tests</h2>
    <table>
      <tr>
        <th>name</th>
        <th>component</th>
        <th>environment</th>
        <th>zone</th>
        <th>host</th>
        <th>test</th>
      </tr>
      {{#each implementationTests}}
        <tr>
          <td>{{name}}</td>
          <td>{{component}}</td>
          <td>{{environment}}</td>
          <td>{{zone}}</td>
          <td>{{host}}</td>
          <td>{{#each tests}}{{this}},{{/each}}</td>
        </tr>
      {{/each}}
  </table>

  <h2>Load Balancers</h2>
    <table>
      <tr>
        <th>Name</th>
        <th>Zone</th>
        <th>Component Service</th>
        <th>Target Hosts</th>
      </tr>
      {{#each loadbalancers}}
        <tr>
          <td>{{name}}</td>
          <td>{{zone}}</td>
          <td>{{component}}</td>
          <td>
            {{#each hosts}}
              {{name}},
            {{/each}}
          </td>
        </tr>
      {{/each}}
  </table>


  <h2>Firewall Requirement</h2>
  <table>
    <tr>
      <th>Rule</th>
      <th>Source Environment</th>

      <th>Source Component<br/>Source Type</th>

      <th>Source Host<br/>Zone</th>
      <th>Target Host<br/>Zone</th>
      <th>Target Component<br/>Target Type</th>
      <th>Tests</th>


    </tr>
    {{#each firewall}}
      <tr>
        <td>{{rule}}</td>

        <td>{{sEnvironment}}</td>

        <td>{{sComponent}}<br/>{{sType}}</td>

        <td>{{sHost}}<br/>{{sZone}}</td>
        <td>{{tHost}}<br/>{{tZone}}</td>

        <td>{{tComponent}}<br/>{{tType}}</td>
        <td>{{#each tests}}{{this}},{{/each}}</td>

      </tr>
    {{/each}}
</table>

<hr/>

  <h2>Connectivity</h2>
    <table>
      <tr>
        <th>Source Component</th>
        <th>Source Type</th>
        <th>Source Zone</th>
        <th>Source Environment</th>
        <th>Source Hosts</th>

        <th>Target Component</th>
        <th>Target Type</th>
        <th>Target Zone</th>
        <th>Target Environment</th>
        <th>Target Hosts</th>
      </tr>
      {{#each connectivity}}
        <tr>
          <td>{{sComponent}}</td>
          <td>{{sType}}</td>
          <td>{{sZone}}</td>
          <td>{{sEnvironment}}</td>
          <td>{{#each sHosts}}
                {{name}},
              {{/each}}
          </td>

          <td>{{tComponent}}</td>
          <td>{{tType}}</td>
          <td>{{tZone}}</td>
          <td>{{tEnvironment}}</td>
          <td>{{#each tHosts}}
                {{name}},
              {{/each}}
          </td>
        </tr>
      {{/each}}
  </table>

  <h2>Hosts</h2>
    <table>
      <tr>
        <th>Environment</th>
        <th>Zone</th>
        <th>Component Type</th>
        <th>Host</th>
      </tr>
      {{#each hosts}}
        <tr>
          <td>{{environment}}</td>
          <td>{{zone}}</td>
          <td>{{component}}</td>
          <td>{{host}}</td>
        </tr>
      {{/each}}
  </table>


  <h2>Component Types</h2>
    <table>
      <tr>
        <th>Environment</th>
        <th>Zone</th>
        <th>Component Type</th>
        <th>Hosts</th>
      </tr>
      {{#each componentTypes}}
        <tr>
          <td>{{environment}}</td>
          <td>{{zone}}</td>
          <td>{{component}}</td>
          <td>{{#each hosts}}
                {{name}},
              {{/each}}
          </td>
        </tr>
      {{/each}}
  </table>

  <h2>Service Dependencies</h2>
    <table>
      <tr>
        <th>Source</th>
        <th>Type</th>
        <th>Target</th>
      </tr>
      {{#each dependencies}}
        <tr>
          <td>{{source}}</td>
          <td>{{type}}</td>
          <td>{{targetComponent}}</td>
        </tr>
      {{/each}}
  </table>

</div>

</body>

</html>
